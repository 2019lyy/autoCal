#Flask对象工厂
import os

from flask import Flask

def create_app(test_config=None):
    # create and configure the app
    app = Flask(__name__, static_folder='webApp', static_url_path='', instance_relative_config=True)
    app.config.from_mapping(
        SECRET_KEY='dev',
        DATABASE=os.path.join(app.instance_path, 'userConf.db'),
    )

    if test_config is None:
        # load the instance config, if it exists, when not testing
        app.config.from_pyfile('config.py', silent=True)
    else:
        # load the test config if passed in
        app.config.from_mapping(test_config)

    # ensure the instance folder exists
    try:
        os.makedirs(app.instance_path)
    except OSError:
        pass

    #导入数据处理层
    from . import db
    db.init_app(app)

    #导入管理蓝图
    from . import user_conf
    app.register_blueprint(user_conf.bp)

    #数据初始化蓝图
    from . import init_server
    app.register_blueprint(init_server.bp)
    with app.app_context():
        init_server.load_user_var()
        init_server.load_user_condition()

    @app.route('/')
    def index():
        return app.send_static_file('index.html')

    return app